<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            tools:context="com.freight.shipper.ui.addload.AddLoadFragment">

        <TextView
                style="@style/TextView.Heading.M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pickup_and_drop"
                android:textColor="@color/text_color_accent" />

        <TextView
                style="@style/TextView.Heading.XS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pickup" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvPickupAddress"
                    style="@style/TextView.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/buttonChangePickup"
                    tools:text="@string/pickup" />

            <Button
                    android:id="@+id/buttonChangePickup"
                    style="@style/Material.Button.Transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/change"
                    android:textColor="@color/text_color_accent" />
        </RelativeLayout>

        <TextView
                style="@style/TextView.Heading.XS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drop" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvDropAddress"
                    style="@style/TextView.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/buttonChangeDrop"
                    tools:text="@string/drop" />

            <Button
                    android:id="@+id/buttonChangeDrop"
                    style="@style/Material.Button.Transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/change"
                    android:textColor="@color/text_color_accent" />
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp">

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/labelDistance"
                        style="@style/TextView.Body.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/distance_colon" />

                <TextView
                        android:id="@+id/tvDistance"
                        style="@style/TextView.Body.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/labelDistance"
                        android:padding="@dimen/_5dp"
                        tools:text="280 Miles" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/labelETA"
                        style="@style/TextView.Body.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/eta_colon" />

                <TextView
                        android:id="@+id/tvETA"
                        style="@style/TextView.Body.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/labelETA"
                        android:padding="@dimen/_5dp"
                        tools:text="5 Hr 18 Mins" />

            </RelativeLayout>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/section_divider_color" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp">

            <TextView
                    android:id="@+id/labelPickupDate"
                    style="@style/TextView.Body.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:text="@string/pickup_date_star" />

            <TextView
                    android:id="@+id/tvPickupDate"
                    style="@style/TextView.Body.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/labelPickupDate"
                    android:drawableRight="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="end"
                    android:padding="@dimen/_5dp"
                    tools:text="28 July 2019, 2:56 AM " />


        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/section_divider_color" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp">

            <TextView
                    android:id="@+id/labelDropDate"
                    style="@style/TextView.Body.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:text="@string/drop_date_star" />

            <TextView
                    android:id="@+id/tvDropDate"
                    style="@style/TextView.Body.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/labelDropDate"
                    android:drawableRight="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="end"
                    android:padding="@dimen/_5dp"
                    tools:text="28 July 2019, 2:56 AM " />


        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/section_divider_color" />

        <TextView
                style="@style/TextView.Heading.M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/select_your_vehicle_type"
                android:textColor="@color/text_color_accent" />

        <Spinner
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp">

        </Spinner>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp">

            <ImageView
                    android:id="@+id/imageVehicleType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:src="@drawable/ic_truck" />

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageVehicleType">

                <TextView
                        android:id="@+id/tvVehicleType"
                        style="@style/TextView.Heading.XS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Eicher pro 250" />

                <TextView
                        android:id="@+id/labelCapacity"
                        style="@style/TextView.Body.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvVehicleType"
                        android:text="@string/capacity_colon" />

                <TextView
                        android:id="@+id/tvCapacity"
                        style="@style/TextView.Body.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvVehicleType"
                        android:layout_toEndOf="@+id/labelCapacity"
                        tools:text="10 Tons" />

            </RelativeLayout>


        </RelativeLayout>

        <TextView
                style="@style/TextView.Heading.M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/who_is_the_sender"
                android:textColor="@color/text_color_accent" />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:theme="@style/TextInputLayoutAppearance">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextReceiverName"
                    style="@style/Material.EditText"
                    android:drawableEnd="@drawable/ic_phonebook"
                    android:hint="@string/receiver_name"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:theme="@style/TextInputLayoutAppearance">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhoneNumber"
                    style="@style/Material.EditText"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/submit" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>

