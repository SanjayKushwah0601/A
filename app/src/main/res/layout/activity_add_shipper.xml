<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.freight.shipper.ui.addshipper.AddShipperViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/text_fields"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiLoadName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/Material.EditText"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:text="@={ viewModel.requestModel.firstName }" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/Material.EditText"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:text="@={ viewModel.requestModel.lastName }" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/Material.EditText"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:text="@={ viewModel.requestModel.email }" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/Material.EditText"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:text="@={ viewModel.requestModel.phone }" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vType"
                    style="@style/TextView.Body.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="0dp"
                    android:paddingStart="@dimen/_15dp"
                    android:text="@string/vehicle"
                    android:textColor="@color/gray_dark"
                    tools:ignore="RtlSymmetry" />

                <Spinner
                    android:id="@+id/spVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vType"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:minHeight="@dimen/_40dp"
                    android:paddingTop="0dp"
                    android:spinnerMode="dropdown"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCapacity"
                    style="@style/Material.EditText"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:text="@={viewModel.requestModel.address}" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCity"
                        style="@style/Material.EditText"
                        android:hint="@string/city"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:text="@={viewModel.requestModel.city}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/Material.EditText"
                        android:hint="@string/postal_code"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={viewModel.requestModel.postcode}" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountry"
                        style="@style/TextView.Body.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="0dp"
                        android:paddingStart="@dimen/_15dp"
                        android:text="@string/country"
                        android:textColor="@color/gray_dark"
                        tools:ignore="RtlSymmetry" />

                    <Spinner
                        android:id="@+id/spCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvCountry"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="0dp"
                        android:spinnerMode="dropdown"
                        android:theme="@style/ThemeOverlay.AppCompat.Light" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvState"
                        style="@style/TextView.Body.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="0dp"
                        android:paddingStart="@dimen/_15dp"
                        android:text="@string/state"
                        android:textColor="@color/gray_dark"
                        tools:ignore="RtlSymmetry" />

                    <Spinner
                        android:id="@+id/spState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvState"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="0dp"
                        android:spinnerMode="dropdown"
                        android:theme="@style/ThemeOverlay.AppCompat.Light" />
                </RelativeLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNumberPlat"
                    style="@style/Material.EditText"
                    android:hint="@string/password"
                    android:inputType="textVisiblePassword"
                    android:maxLines="1"
                    android:text="@={ viewModel.requestModel.password }" />

            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/buttonRegister"
                    style="@style/Material.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.submitShipperDetails()}"
                    android:text="@string/submit"
                    android:visibility="@{ !viewModel.isLoading ? View.VISIBLE : View.GONE, default=visible}" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="@{ viewModel.isLoading ? View.VISIBLE : View.GONE, default=gone}" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</layout>