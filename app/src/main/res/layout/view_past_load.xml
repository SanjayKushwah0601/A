<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="pastLoad"
            type="com.freight.shipper.model.PastLoad"/>

        <variable
            name="viewholder"
            type="com.freight.shipper.ui.bookings.pager.PastLoadViewHolder"/>

        <variable
            name="isEditing"
            type="boolean"/>

        <variable
            name="clickListener"
            type="com.freight.shipper.ui.bookings.pager.PastLoadEventListener"/>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_3dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:loadCircularImage="@{ pastLoad.customerImage }"/>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                style="@style/TextView.Heading.XS"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@{pastLoad.customerName}"
                tools:text="@string/customer_name"
                android:layout_toEndOf="@+id/image"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                style="@style/TextView.Body.Bold"
                android:singleLine="true"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:background="@drawable/bg_rounded_outline_accent"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/completed"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_alignParentEnd="true"
            />

            <TextView
                android:layout_width="wrap_content"
                style="@style/TextView.Body"
                android:text="@{`Load id: `+pastLoad.id}"
                tools:text="@string/customer_name"
                android:singleLine="true"
                android:id="@+id/tvLoadId"
                android:layout_toEndOf="@+id/image"
                android:layout_below="@+id/tvCustomerName"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_below="@+id/image"
                android:layout_marginTop="@dimen/_3dp"
                android:background="@color/section_divider_color"
                android:layout_height="@dimen/_1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/divider1"
                android:layout_marginTop="@dimen/_3dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/TextView.Heading.XS"
                        android:textStyle="bold"
                        android:maxLines="1"
                        tools:text="Pickup City"
                        android:text="@{pastLoad.pickCity}"
                        android:drawableLeft="@drawable/square_accent"
                        android:drawablePadding="@dimen/_3dp"
                        android:drawableTint="@color/colorAccent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/TextView.Heading.XS"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:drawableTint="@color/button_gray"
                            tools:text="Destination City"
                            android:text="@{pastLoad.destinationCity}"
                            android:drawableLeft="@drawable/square_gray"
                            android:drawablePadding="@dimen/_3dp"
                            android:gravity="end"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/TextView.Body"
                        tools:text="Pickup Address"
                        android:maxLines="2"
                        android:text="@{pastLoad.pickAddress}"
                        android:drawablePadding="@dimen/_3dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Body"
                        tools:text="Destination Address"
                        android:text="@{pastLoad.destinationAddress}"
                        android:drawablePadding="@dimen/_3dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/TextView.Body.Gray"
                        tools:text="10:00 AM, 22 Jul"
                        android:maxLines="2"
                        android:text="@{pastLoad.pickTime}"
                        android:drawablePadding="@dimen/_3dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Body.Gray"
                        tools:text="10:00 AM, 22 Jul"
                        android:text="@{pastLoad.destinationTime}"
                        android:drawablePadding="@dimen/_3dp"/>

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_3dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/TextView.Body.Bold"
                        android:text="@string/dollar"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView3"/>

                    <ImageView
                        android:layout_width="@dimen/_12dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_help_outline_accent"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/imageView"
                        android:layout_marginStart="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/TextView.Heading.L"
                        tools:text="122.00"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:text="@{pastLoad.amount}"
                        android:drawablePadding="@dimen/_3dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="4dp"
                        android:id="@+id/textView4"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Body.Gray"
                        android:text="@string/goods_colon"
                        android:id="@+id/textView2"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
                        android:layout_marginStart="4dp" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Body"
                        tools:text="Electronics"
                        android:text="@{pastLoad.goodsName}"
                        android:drawablePadding="@dimen/_3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView5"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Body.Gray"
                        android:text="@string/paid_by"
                        android:drawablePadding="@dimen/_3dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="4dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        style="@style/TextView.Body"
                        tools:text="Receiver"
                        android:text="@{pastLoad.paidBy}"
                        android:drawablePadding="@dimen/_3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" android:id="@+id/textView6"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
