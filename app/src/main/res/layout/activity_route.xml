<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.freight.shipper.ui.route.RouteViewModel" />

        <variable
            name="loadModel"
            type="com.freight.shipper.core.persistence.network.response.ActiveLoad" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.freight.shipper.ui.route.RouteActivity">

        <LinearLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/toolbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:loadCircularImage="@{ loadModel.image }" />

                <TextView
                    android:id="@+id/tvCustomerName"
                    style="@style/TextView.Heading.XS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_toStartOf="@+id/imageViewCall"
                    android:layout_toEndOf="@+id/image"
                    android:singleLine="true"
                    android:text='@{String.format("%s", loadModel.finderName)}'
                    tools:text="@string/customer_name" />

                <TextView
                    style="@style/TextView.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCustomerName"
                    android:layout_toStartOf="@+id/imageViewCall"
                    android:layout_toEndOf="@+id/image"
                    android:singleLine="true"
                    android:text="@{`Load id: `+loadModel.loadsId}"
                    tools:text="@string/customer_name" />

                <ImageView
                    android:id="@+id/imageViewCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_5dp"
                    android:padding="@dimen/_10dp"
                    app:srcCompat="@drawable/ic_phone" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_below="@+id/image"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:background="@color/section_divider_color" />

                <TextView
                    style="@style/TextView.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:drawableStart="@drawable/square_accent"
                    android:drawablePadding="@dimen/_3dp"
                    android:drawableTint="@color/colorAccent"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:text='@{String.format("%s, %s, %s", loadModel.pickCity, loadModel.pickAddress, loadModel.pickPostcode)}'
                    tools:text="Pickup City" />
            </RelativeLayout>

        </LinearLayout>


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarContainer"
            tools:context="com.freight.shipper.ui.route.RouteActivity" />

        <RelativeLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                style="@style/Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/arrived_pickup" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>